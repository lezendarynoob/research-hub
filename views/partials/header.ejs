</head>


<body>
    <div>
        <nav class="navbar navbar-expand navbar-dark navs fixed-top">
            <div class="navbar-nav d-block d-lg-none">
                <a class="nav-item nav-link" onclick="openNav()">
                    <i class="fa fa-bars"></i>
                </a>
            </div>
            <a class="navbar-brand" href="/login"><img src="/images/logo.png" class="logo" alt="" /></a>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav navbard-link">
                    <% if(!currentUser){ %>
                        <a class="nav-item nav-link" href="/register">Sign Up!</a>
                        <a class="nav-item nav-link" href="/">Login </a>
                        <% }else{ %>
                            <a class="nav-item nav-link" href="/logout">Logout <img src="/images/logout.png" alt="" /></a>
                            <% } %>
                </div>
                <div class="navbar-nav d-block d-lg-none ml-auto">
                    <a class="nav-item nav-link" href="/profile">
                        <i class="fa fa-user"></i>
                    </a>
                </div>
            </div>
        </nav>

        <div id="mySidenav" class="responsive-sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <a href="/publication/new"><img src="/images/content-writing.png" /> Create Publication</a>
            <a href="/publication"><img src="/images/binocular.png" /> View Publication</a>
