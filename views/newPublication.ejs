<%- include("partials/header.ejs") %>
    <div class="container-fluid">
        <div class="row">
            <%- include("partials/navbar.ejs") %>
                <div class="col-md-8 left">
                    <p class="heading-pg">Create Publication</p>

                    <form action="/publication" method="POST">



                        <div class="form-group col-md-8">
                            <label for="category">Category</label>
                            <select class="custom-select" name="category" placeholder="category">
                                    <option value="International Journal">International Journal</option>
                                    <option value="National Journal">National Journal</option>
                                    <option value="Book Chapter">Book Chapter</option>
                                    <option value="Edited Book">Edited Book</option>
                                    <option value="National Conference">National Conference</option>
                                    <option value="International Conference">International Conference</option>
                                    <option value="Patent">Patent</option>
                            </select>

                        </div>
                        <div class="form-group  col-md-8">
                            <label for="AuthorName">Author Name</label>
                            <input type="text" class="form-control" name="author" placeholder="Author's Name">
                        </div>
                        <div class="form-group  col-md-8">
                            <label for="title_of_paper">Publication Title</label>
                            <input type="text" class="form-control" name="title" placeholder="Title of your Publication">
                        </div>
                        <div class="form-group  col-md-8">
                            <label for="journal/conference_name">Journal / Conference Name</label>
                            <input type="text" class="form-control" name="journal_name" placeholder="Name of Journal / Conference">
                        </div>
                        <div class="form-group  col-md-8">
                            <label for="title_of_paper">Publication Title</label>
                            <input type="text" class="form-control" name="publication_title" placeholder="Publication Title">
                        </div>
                        <div class="form-group  col-md-8">
                            <label for="title_of_paper">Volume Number</label>
                            <input type="text" class="form-control" name="volume_number" placeholder="Volume Number">
                        </div>
                        <div class="form-group  col-md-8">
                            <label for="title_of_paper">Issue Number</label>
                            <input type="text" class="form-control" name="issue_number" placeholder="Issue Number">
                        </div>
                        <div class="form-group  col-md-8">
                            <label for="title_of_paper">Page Number</label>
                            <input type="text" class="form-control" name="page_number" placeholder="Page Number">
                        </div>
                        <div class="form-group  col-md-8">
                            <label for="title_of_paper">ISSN Number</label>
                            <input type="text" class="form-control" name="issn_number" placeholder="ISSN Number">
                        </div>
                        <div class="form-group  col-md-8">
                            <label for="title_of_paper">Indexing</label>
                            <input type="text" class="form-control" name="pindexing" placeholder="Indexing">
                        </div>
                        <div class="form-group col-md-8">
                            <label for="file_upload">Upload Document</label>
                        </div>
                        <div class="custom-file col-md-8">
                            <input type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <br>
                        <br>
                        <div class="col-md-8">
                            <button class="btn btn-primary">Submit!</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-2">
                    <%- include("partials/profile.ejs") %>
                </div>
        </div>
    </div>
    </div>
    <%- include("partials/footer.ejs") %>