<%- include("partials/header.ejs") %>
<div class="row">
  <%- include("partials/navbar.ejs") %>
  <div class="col-md-8 left">
    <p class="heading-pg">Set Target</p>

    <form action="/setTarget" method="POST">
      <div class="form-group col-md-8">
        <label for="category">Category</label>
        <select
          class="custom-select"
          name="category_set_trgt"
          placeholder="category"
        >
          <option value="International Journal">International Journal</option>
          <option value="National Journal">National Journal</option>
          <option value="Book Chapter">Book Chapter</option>
          <option value="Edited Book">Edited Book</option>
          <option value="National Conference">National Conference</option>
          <option value="International Conference">
            International Conference
          </option>
          <option value="Patent">Patent</option>
        </select>
      </div>
      <div class="form-group col-md-8">
        <label for="title_of_paper">Title of the Publication/Conference</label>
        <input
          type="text"
          class="form-control"
          name="title_set_trgt"
          placeholder="Title of the Book / Conference / Patent / Journal"
        />
      </div>
      <div class="form-group col-md-8">
        <label for="title_of_paper">Indexing</label>
        <input
          type="text"
          class="form-control"
          name="indexing_set_trgt"
          placeholder="Indexing"
        />
      </div>
      <div class="form-group col-md-8">
        <label for="Achievement Date">Achievement Date</label>
        <br />
        <input
          class="form-control col-md-6"
          id="date"
          name="achievement_date_set_trgt"
          placeholder="MM/DD/YYY"
          type="date"
        />
      </div>

      <div class="col-md-8">
        <button class="btn btn-danger">Add Another!</button>
        <button class="btn btn-primary">Submit!</button>
      </div>
    </form>
  </div>
  <%- include("partials/profile.ejs") %>
</div>
<%- include("partials/footer.ejs") %>
