<%- include("partials/header.ejs") %>
    <div class="row">
        <%- include("partials/navbar.ejs") %>
            <div class="col-md-8 left">
                <p class="heading-pg">Funded Project</p>

                <form action="/fundprj" method="POST" class="needs-validation" ref='uploadForm' id='uploadForm' encType="multipart/form-data" novalidate>
                    <div class="form-group col-md-8">
                        <label for="AuthorName">Name of the Principal Investigator</label>
                        <input type="text" class="form-control" name="principal_investigator" placeholder="Principal Investigator" />
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="form-group col-md-8">
                        <label for="AuthorName">Name of the Co-Investigator</label>
                        <input type="text" class="form-control" name="co_investigator" placeholder="Co-Investigator" />
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>

                    <div class="form-group col-md-8">
                        <label for="title_of_paper">Title of the Project</label>
                        <input type="text" class="form-control" name="title_fund_prj" placeholder="Title of your Project" />
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="form-group col-md-8">
                        <label for="journal/conference_name">Funding Agency</label>
                        <input type="text" class="form-control" name="funding_agency" placeholder="Funding Agency" />
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="form-group col-md-8">
                        <label for="title_of_paper">Overall Cost</label>
                        <input type="number" class="form-control" name="Overall_cost" placeholder="Overall Cost" />
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="form-group col-md-8">
                        <label for="Achievement Date">Timeline </label>
                        <br />
                        <label for="Achievement Date">Start Date </label>
                        <input class="form-control col-md-6" id="date" name="start_date" placeholder="Start Date" type="date" />
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                        <label for="Achievement Date">End Date </label>
                        <input class="form-control col-md-6" id="date" name="end_date" placeholder="End Date" type="date" />
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="form-group col-md-8">
                        <label for="file_upload">Upload Document</label>
                    </div>
                    <div class="custom-file col-md-8">
                        <input type="file" class="custom-file-input" id="customFile" name="fundfile" required />
                        <label class="custom-file-label" for="customFile">Choose file</label>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>

                    <br />
                    <br />
                    <div class="col-md-8">
                        <button class="btn btn-primary">Submit!</button>
                    </div>
                </form>
            </div>
            <%- include("partials/profile.ejs") %>
    </div>
    <%- include("partials/footer.ejs") %>